{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-backend-url.com/api",
    "REACT_APP_TOKEN_ADDRESS": "your-token-contract-address",
    "REACT_APP_USDT_ADDRESS": "your-usdt-contract-address"
  }
} 